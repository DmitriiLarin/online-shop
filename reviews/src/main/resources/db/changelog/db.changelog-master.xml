<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">


    <changeSet id="1" author="reviews">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="review" schemaName="reviews"/>
            </not>
        </preConditions>

        <createTable tableName="review" schemaName="reviews">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_review_product" references="catalog.product(id)" deleteCascade="true"/>
            </column>
            <column name="text" type="TEXT"/>
            <column name="estimation" type="INTEGER">
                <constraints nullable="false" checkConstraint="estimation >= 0"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>

