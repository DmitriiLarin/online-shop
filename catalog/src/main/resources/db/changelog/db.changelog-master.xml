<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="catalog">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="product" schemaName="catalog"/>
            </not>
        </preConditions>

        <createTable tableName="product" schemaName="catalog">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="price" type="INTEGER">
                <constraints nullable="false" checkConstraint="price > 0"/>
            </column>
            <column name="quantity" type="INTEGER">
                <constraints nullable="false" checkConstraint="quantity > 0"/>
            </column>
            <column name="image" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGSERIAL">
                <constraints nullable="false" foreignKeyName="fk_product_user" references="auth.users(id)" deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>

